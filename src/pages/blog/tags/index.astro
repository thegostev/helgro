---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Content
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

const formatTag = (value: string) =>
  value
    .split(/[-_]/)
    .filter(Boolean)
    .map((segment) => segment.charAt(0).toUpperCase() + segment.slice(1))
    .join(" ");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-32 pb-12">
      <Text
        tag="h1"
        variant="displayXL"
        class="text-base-900 font-medium tracking-tight text-pretty"
      >
        Tag directory
      </Text>
      <ol
        role="list"
        class="mt-12 lg:mt-24 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
      >
        {
          tags.map((tag) => (
            <li class="bg-white relative p-8 rounded-2xl aspect-square w-full flex flex-col items-center justify-center">
              <a href={`/blog/tags/${tag}`} class="absolute inset-0 z-10" />
              <Text
                tag="a"
                variant="textBase"
                class="capitalize flex tet-base-900 hover:text-base-600 font-medium"
              >
                {formatTag(tag) || tag}
              </Text>
            </li>
          ))
        }
      </ol>
    </Wrapper>
  </section>
</BaseLayout>
